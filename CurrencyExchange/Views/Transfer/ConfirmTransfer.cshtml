@model TransferRequest

@{
    ViewData["Title"] = "Подтверждение перевода";
}

<h2 class="text-center header">Подтверждение заявки на международный перевод</h2>

<div class="container md-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6 card p-3 application">
            <div class="mb-3">
                <label class="control-label text-tittle">Банк партнер</label>
                <div class="text">@Model.Bank?.Name - @Model.Bank?.Address</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Дата и время посещения</label>
                <div class="text">@Model.ApointmentDateTime</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Имя отправителя</label>
                <div class="text">@Model.User?.Name</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Электронная почта отправителя</label>
                <div class="text">@Model.User?.Email</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Адрес отправителя</label>
                <div class="text">@Model.User?.Address</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Сумма перевода</label>
                <div class="text">@Model.Amount @Model.Currency</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Имя получателя</label>
                <div class="text">@Model.RecipientName</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Счет получателя</label>
                <div class="text">@Model.RecipientAccount</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Адрес получателя</label>
                <div class="text">@Model.RecipientAddress</div>
            </div>

            <div class="mb-3">
                <label class="control-label text-tittle">Дополнительная информация</label>
                <div class="text">@Model.AddittionalInfo</div>
            </div>

            <div class="mt-3 text-center">
                <form asp-action="ConfirmTransfer" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Amount" />
                    <input type="hidden" asp-for="Currency" />
                    <input type="hidden" asp-for="RecipientName" />
                    <input type="hidden" asp-for="RecipientAccount" />
                    <input type="hidden" asp-for="RecipientAddress" />
                    <input type="hidden" asp-for="AddittionalInfo" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="BankId" />
                    <input type="hidden" asp-for="ApointmentDateTime" />

                    <button type="submit" class="btn btn-primary btn-on-page">Подтвердить</button>
                    <a asp-action="Index" class="btn btn-secondary btn-on-page">Отмена</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section css {
    <link rel="stylesheet" href="~/css/confirmApp.css" asp-append-version="true" />
}